#exec --no-startup-id
hide_edge_borders smart_no_gaps
#remove window title
# default_border pixel 2

default_border normal 0

exec_always --no-startup-id xrdb -merge ~/.Xresources
exec_always --no-startup-id $HOME/.config/polybar/launch.sh
exec_always --no-startup-id picom -b
exec --no-startup-id fcitx5
exec_always --no-startup-id "feh --bg-fill ~/Pictures/wallpapers/wallpaper01.png"
# exec_always --no-startup-id "feh --bg-fill ~/Pictures/wallpaper/wallpaper14.jpg"
#bindsym
# bindsym $mod+c exec code-oss
bindsym $mod+c exec code
bindsym Print exec --no-startup-id screengrab

for_window [class="^.*"] border normal 0

# Window title bar
title_align center
# class                 border  backgr. text    indicator child_border

client.focused          #272c33 $color_primary #ffffff $color_primary  #292d2e
client.focused_inactive #313742 #282A2E #ffffff #484e50   #313742
client.unfocused        #313742 #282A2E #888888 #292d2e   #313742
client.urgent           #2f343a #5294e2 #ffffff #F92672   #F92672
client.placeholder      #000000 #0c0c0c #ffffff #000000   #0c0c0c

#Wacom
exec_always --no-startup-id "xsetwacom set 'Wacom Intuos BT M Pad pad' MapToOutput eDP"
exec_always --no-startup-id "xsetwacom set 'Wacom Intuos BT M Pen stylus' MapToOutput eDP"

