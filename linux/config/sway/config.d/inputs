# set xkeyboard layout
# キーボード設定

input type:keyboard {
    xkb_layout jp
    xkb_model pc106
    xkb_options "grp:win_space_toggle" 
}

input type:pointer {
    accel_profile flat
    pointer_accel 0.1 
}

#Wacom
exec_always swaymsg "input 1386:888:Wacom_Intuos_BT_M_Pad map_to_output eDP-1"
exec_always swaymsg "input 1386:888:Wacom_Intuos_BT_M_Pen map_to_output eDP-1"
